<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.experiment.mapper.TaskFileMapper">

    <!-- 结果映射 -->
    <resultMap id="TaskFileResult" type="com.ruoyi.experiment.pojo.entity.TaskFile">
        <id column="id" property="id"/>
        <result column="file_name" property="fileName"/>
        <result column="file_path" property="filePath"/>
        <result column="file_type" property="fileType"/>
        <result column="file_size" property="fileSize"/>
        <result column="task_id" property="taskId"/>
        <result column="user_id" property="userId"/>
        <result column="user_nick_name" property="userNickName"/>
        <result column="upload_time" property="uploadTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 插入文件记录 -->
    <insert id="insert" parameterType="com.ruoyi.experiment.pojo.entity.TaskFile" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO task_file(
            file_name, file_path, file_type, file_size,
            task_id, user_id, user_nick_name, upload_time,
            create_time, update_time
        )
        VALUES (
            #{fileName}, #{filePath}, #{fileType}, #{fileSize},
            #{taskId}, #{userId}, #{userNickName}, #{uploadTime},
            #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据ID删除文件 -->
    <delete id="deleteById" parameterType="Long">
        DELETE FROM task_file WHERE id = #{id}
    </delete>

</mapper>